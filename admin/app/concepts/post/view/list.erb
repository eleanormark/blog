<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Posts</h1>
  </div>
</div>

<%= link_to 'Add new Post', Router.path(:new_post), class: 'btn btn-success' %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Active</th>
      <th>Lang</th>
      <th>Created At</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <%= cell(Post::Cell::Show, collection: posts).() %>
    </tbody>
  </table>
</div>
<%= will_paginate posts %>
