<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>One developer blog</title>

  <link href="/public/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="/public/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet" type="text/css">
  <link href="/public/bower_components/startbootstrap-sb-admin-2/dist/css/sb-admin-2.css" rel="stylesheet">
  <link href="/public/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="/public/bower_components/medium-editor/dist/css/medium-editor.min.css" rel="stylesheet" type="text/css">
  <link href="/public/bower_components/medium-editor/dist/css/themes/tim.min.css" rel="stylesheet" type="text/css">
  <link href="/public/bower_components/medium-editor-tables/dist/css/medium-editor-tables.css" rel="stylesheet" type="text/css"/>
  <link rel="stylesheet" href="/public/bower_components/medium-editor-embed-button/dist/css//medium-editor-embed-button.min.css" type="text/css" media="screen" charset="utf-8">

  <link rel="shortcut icon" href="/public/images/favicon.ico" type="image/x-icon">

  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <script src="/public/bower_components/jquery/dist/jquery.min.js"></script>
</head>
<body>
<div id="wrapper">
  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">One developer blog</a>
    </div>
    <!-- /.navbar-header -->
    <%= cell(Html::Cell::Menu, nil, current_user: current_user) %>


    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li>
            <a href="/"><i class="fa fa-files-o fa-fw"></i> Posts</a>
          </li>
          <li>
            <%= link_to raw('<i class="fa fa-file-text fa-fw"></i> Backup'), Router.path(:backup) %>
          </li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>

  <div id="page-wrapper">
    <%= cell(Html::Cell::FlashMessage, collection: flashes).() %>
    <%= yield %>
  </div>
</div>

<script src="/public/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/public/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<script src="/public/bower_components/startbootstrap-sb-admin-2/dist/js/sb-admin-2.js"></script>
<script src="/public/bower_components/medium-editor/dist/js/medium-editor.min.js"></script>
<script src="/public/bower_components/medium-editor-tables/dist/js/medium-editor-tables.js"></script>
<script src="/public/bower_components/medium-editor-embed-button/dist/js/medium-editor-embed-button.min.js"></script>
<script src="/public/medium_editor/medium_editor.js"></script>
</body>
</html>