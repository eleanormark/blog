# frozen_string_literal: true
source 'https://rubygems.org'

ruby '2.3.1'

# Db
gem 'sequel'
gem 'pg'

# Hanami
gem 'hanami-router'
gem 'hanami-controller'
gem 'hanami-helpers'

# Trailblazer
gem 'dry-validation'
gem 'trailblazer'
gem 'trailblazer-loader'
gem 'trailblazer-cells'
gem 'cells-erb'
gem 'formular'
gem 'will_paginate'

# Authentication
gem 'bcrypt'

# Web server
gem 'puma'

# Cli
gem 'thor'

group :development do
  # Rerun web server when code changes (see docker-compose.dev.yml)
  gem 'rerun'

  # Debugger
  gem 'pry'
  gem 'better_errors'
  gem 'binding_of_caller'

  # Console
  gem 'rack-console'
end