<div class="container">
  <div class="row" id="content-wrapper">
    <div class="col-md-9" id="content-column">
      <%= yield %>
    </div>
    <div class="col-md-3" id="author-column">
      <h1><a href="/">One Dev Blog</a></h1>
      <div class="lang-links">
        <%= lang_link 'en' %>
        <%= lang_link 'ru' %>
      </div>
      <div class="avatar"><img src="https://s.gravatar.com/avatar/b7e4c4440248d7e0229484b7de2dd96a?s=170"></div>
      <div class="social-links">
        <a href="https://github.com/sergey-koba-mobidev" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a>
        <a href="https://www.linkedin.com/in/serhii-koba" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
        <a href="https://twitter.com/KobaSerhii" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>
      </div>
      <div class="about-author">
        <%= t.author.about %>
      </div>
    </div>
  </div>
</div>
<footer class="container">
  <h3 class="pull-left">&copy; <%= t.author.full_name %></h3>
  <a href="https://github.com/sergey-koba-mobidev/blog" target="_blank" class="fork-link pull-right"><i class="fa fa-github" aria-hidden="true"></i> Fork me </a>
</footer>
