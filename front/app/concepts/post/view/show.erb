<article>
  <div class="row">
    <div class="col-md-9 post-list-content">
      <h2><%= title %></h2>
      <p><%= content %></p>
      <%= link_to 'Back',  '/', class: 'btn btn-info pull-right'%>

      <div id="disqus_thread"></div>
      <script>
         var disqus_config = function () {
         this.page.url = '<%= url %>';
         this.page.identifier = '<%= discus_identifier %>';
         };
        (function() { // DON'T EDIT BELOW THIS LINE
          var d = document, s = d.createElement('script');
          s.src = '//onedevblog-1.disqus.com/embed.js';
          s.setAttribute('data-timestamp', +new Date());
          (d.head || d.body).appendChild(s);
        })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

    </div>
    <div class="col-md-3 post-list-info">
      <div class="timeline"><%= post_date %></div>
      <div class="tags">Tags:
        <% tags.each do |tag| %>
        <span class="label label-default"><%= tag %></span>
        <% end %>
      </div>
    </div>
  </div>
</article>
