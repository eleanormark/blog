<div class="b-blog-list">
  <article class="b-blog-list-item">
    <h2 class="b-blog-list-item__title"><%= title %></h2>
    <p class="b-blog-list-item__date"><%= post_date %></p>
    <ul class="b-tags-list g-clearfix">
      <%= cell(Tag::Cell::Label, collection: tags).() %>
    </ul>
    <div class="b-wiziwig">
      <%= content %>
    </div>
    <%= link_to t.general.back,  Router.path(:root), class: 'b-btn-read' %>

    <div id="disqus_thread"></div>
    <script>
        var disqus_config = function () {
            this.page.url = '<%= url %>';
            this.page.identifier = '<%= discus_identifier %>';
            this.language = "<%= R18n.get.locale.code  %>";
        };
        (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = '//onedevblog-1.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();

        //hack for tables
        $(function () {
            $('.medium-editor-table').addClass('table table-bordered');
        });
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

  </article>
</div>